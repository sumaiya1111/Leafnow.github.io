                        <span class="shop-item-price">$19.99</span>
                        <button class="btn btn-primary shop-item-button" style="background-color: green;" type="button">ADD TO CART</button>
                    </div>
                </div>
            </div>
        </section>
        <h1 class="storeh1">SEED COLLECTIONS</h1>
        <section class="container content-section" style="background-color: #addfad;">
            <div class="shop-items">
                <div class="shop-item">
                    <span class="shop-item-title" style="color: darkslategray;">ASHWAGANDHA</span>
                    <img class="shop-item-image" src="images/ashwagandha.jpg">
                    <div class="shop-item-details">
                        <span class="shop-item-price">$19.99</span>
                        <button class="btn btn-primary shop-item-button" style="background-color: green; position:relative;right:50px" type="button">ADD TO CART</button>
                    </div>
                </div>
                <div class="shop-item">
                    <span class="shop-item-title" style="color: darkslategray;">GYPSOPHILA</span>
                    <img class="shop-item-image" src="images/gypsophila.png" height="100%">
                    <div class="shop-item-details">
                        <span class="shop-item-price">$6.99</span>
                        <button class="btn btn-primary shop-item-button"  style="background-color: green; position:relative;right:6px"type="button">ADD TO CART</button>
                    </div>
                </div>
                <div class="shop-item">
                    <span class="shop-item-title" style="color: darkslategray;">PALAK SEEDS</span>
                    <img class="shop-item-image" src="images/palak.jpg" width="90%">
                    <div class="shop-item-details">
                        <span class="shop-item-price">$6.99</span>
                        <button class="btn btn-primary shop-item-button"  style="background-color: green; position:relative;right:22px; type="button">ADD TO CART</button>
                    </div>
                </div>
